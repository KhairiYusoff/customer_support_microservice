# Database
DATABASE_URL="postgresql://username:password@localhost:5432/chat_microservice?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=24h

# Application
PORT=3000
NODE_ENV=development

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Banking Service Integration
BANKING_SERVICE_URL=http://localhost:3001
BANKING_SERVICE_API_KEY=banking-service-api-key

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# WebSocket
SOCKET_CORS_ORIGIN=http://localhost:3000,http://localhost:3001